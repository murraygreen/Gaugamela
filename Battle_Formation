# read csv
import pandas as pd
import numpy as np

Column_0 = []

# Blank rows to start
for x in range(1,1401):
    cell = ' '
    Column_0.append(cell)

# In order to add ~15,000 phalanx, add 938 rows and 16 columns mimicking 16x16 formation
for x in range(1,939):
    cell = 'Phalanx'
    Column_0.append(cell)

# Create dataframe from list with headers (listtodf)
df_Troops = pd.DataFrame()
df_Troops['a'] = Column_0

# adding 16 columns of phalanx aka duplicating first column to get a total of 16 columns
from string import ascii_lowercase
# where n is the number of columns you want
n = 16
df_First_16 = df_Troops.assign(**{x: df_Troops.iloc[:, 0] for x in ascii_lowercase[:n]})
print(df_First_16)





